export GRUBIMAGESDIR=/lib/grub/i386-pc

# Create grub image:
dd if=$GRUBIMAGESDIR/stage1 of=grub.img bs=512 count=1
dd if=$GRUBIMAGESDIR/stage2 of=grub.img bs=512 seek=1

# Create empty floppy (1,44M)
dd if=/dev/zero of=floppy.img bs=1k count=1440

# Prepare floppy
yes|/sbin/mkfs.ext2 floppy.img
mkdir temp
mount -o loop floppy.img temp
mkdir temp/boot
cp /lib/grub/i386-pc/stage1 temp/boot
cp /lib/grub/i386-pc/stage2 temp/boot
umount temp

echo "Install like that: (remember to change floppy after machine boots)"
echo "install (fd0)/boot/stage1 (fd0) (fd0)/boot/stage2 (fd0)/boot/menu.cfg"

# Start grub floppy
bochs -qf bochs.conf.grub

# Install like that: (remember to change floppy after machine boots)
# install (fd0)/boot/stage1 (fd0) (fd0)/boot/stage2 (fd0)/boot/menu.cfg

mount -o loop floppy.img temp
echo "title   ClearOS">>temp/boot/menu.cfg
echo "root    (fd0)">>temp/boot/menu.cfg
echo "kernel  /boot/clearos">>temp/boot/menu.cfg
echo "timeout=1"
cp clearos temp/boot
umount temp

rmdir temp
